import java.util.*;
public class sequence {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		int a,b,c,n;
		a=sc.nextInt();
		b=sc.nextInt();
		c=sc.nextInt();
		n=sc.nextInt();
		
		int n1=b-a;
		int n2=c-b;
		
		int i;
		int sum=c;
		for(i=4;i<=n;i++)
		{
			if(i%2==0)
			{
				sum += n1;
			}
			else
			{
				sum += n2;
			}
		}
		System.out.println(sum);
	}

}
